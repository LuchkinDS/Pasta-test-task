{# templates/default/index.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Create your paste!{% endblock %}
{% block body %}

    {{ form_start(form, {'action': path('create_paste'), 'method': 'POST'}) }}

    <div class="row">
        <div class="col">
            <label>
                {{ field_label(form.title) }}
                <input
                    name="{{ field_name(form.title, 'title') }}"
                    value="{{ field_value(form.title) }}"
                    placeholder="{{ field_label(form.title) }}"
                    class="form-control"
                >
                <div class="form-error">
                    {{ form_errors(form.title) }}
                </div>
            </label>
        </div>
        <div class="col" id="some-custom-id">
            <label>
                {{ field_label(form.content) }}
                <textarea
                    name="{{ field_name(form.content) }}"
                    placeholder="{{ field_label(form.content) }}"
                    class="form-control"
                >{{ field_value(form.content, 'content') }}</textarea>
                <div class="form-error">
                    {{ form_errors(form.content) }}
                </div>
            </label>
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.expiration) }}
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.exposure) }}
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}