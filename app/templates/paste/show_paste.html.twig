{# templates/default/index.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}
    Dinner is served!{% if paste is not null %}::{{ paste.title }}{% endif %}
{% endblock %}
{% block body %}

    {% for flashMessage in app.session.flashbag.get('posted_pasta') %}
        <div class="alert alert-success" role="alert">
            {{ flashMessage }}
        </div>
    {% endfor %}
    <div class="alert alert-secondary" role="alert">
        {{ paste.content }}
    </div>
{% endblock %}